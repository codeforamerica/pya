<% content_for :page_title, t(".title") %>
<section class="slab question-layout <%= controller_name.gsub("_", "-") %>-outer">
  <div class="grid">
    <div class="grid__item question-wrapper">
  <h1 class="h2 spacing-below-5"><%= t(".title") %></h1>
  <p class="spacing-below-15 spacing-above-0"><%= t(".subtitle") %></p>

  <%= form_with model: @form, url: year_select_path, local: true, method: "put", builder: VitaMinFormBuilder do |f| %>


      <div class="white-group">
        <%= f.vita_min_checkbox_set(
              :opt_in,
              [
                {
                  method: :sms_notification_opt_in,
                  label: "2023"
                },
                {
                  method: :email_notification_opt_in,
                  label: "2024"
                }
              ],
              enum: true,
              label_text: t('.opt_in_label')
            ) %>
      </div>

        <button type="submit" class="button button--primary button--wide spacing-below-15">
          <%= t("general.continue") %>
        </button>
  <% end %>
</div>
  </div>
</section>