<% title = t("views.contact_preference.edit.title") %>
<% content_for :page_title, title %>

<section class="slab question-layout <%= controller_name.gsub("_", "-") %>-outer">
  <div class="grid">
    <div class="grid__item question-wrapper">
      <h1 class="h2" id="main-question"><%= title %></h1>
      <p><%= t("views.contact_preference.edit.subtitle") %></p>

      <div class="options-wrapper">
        <div class="yes-no-buttons">
          <%= link_to t("views.contact_preference.edit.text_message_option"), edit_phone_number_path, class: "button" %>
          <%= link_to t("views.contact_preference.edit.email_option"), edit_email_address_path, class: "button" %>
        </div>
      </div>

      <%= form_with model: @form, url: { action: :update }, local: true, method: "put", builder: VitaMinFormBuilder do |f| %>
        <div class="options-wrapper">
          <div class="yes-no-buttons">
              <%= f.button :submit, name: "#{f.object_name}[contact_preference]", value: "text", class: "button" do %>
                <%= t("views.contact_preference.edit.text_message_option") %>
              <% end %>
            <%= f.button :submit, name: "#{f.object_name}[contact_preference]", value: "email", class: "button" do %>
              <%= t("views.contact_preference.edit.email_option") %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
